<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#f5f5f5</item>
        <item name="colorPrimaryDark">#f5f5f5</item>
        <item name="colorSecondary">#2962FF</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        
        <item name="buttonStyle">@style/ButtonStyle</item>
        
        <item name="fontFamily">@font/roboto_mono_regular</item>
        <item name="android:fontFamily">@font/roboto_mono_regular</item>
    </style>

    <!--android:fontFamily="sans-serif"           // roboto regular-->
    <!--android:fontFamily="sans-serif-light"     // roboto light-->
    <!--android:fontFamily="sans-serif-condensed" // roboto condensed-->
    <!--android:fontFamily="sans-serif-black"     // roboto black-->
    <!--android:fontFamily="sans-serif-thin"      // roboto thin (android 4.2)-->
    <!--android:fontFamily="sans-serif-medium"    // roboto medium (android 5.0)-->

    <!--Default Style for RecyclerView Items-->

    <style name="TextAppearance.TilePrimary" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:letterSpacing">0.01</item>
        <item name="fontFamily">@font/roboto_mono_regular</item>
    </style>
    
    <style name="TextAppearance.TileSecondary" parent="@style/TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/roboto_mono_medium</item>
    </style>

    <style name="TextAppearance.TileTertiary" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/roboto_mono_regular</item>
    </style>
    
    <style name="TextAppearance.Caption" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/roboto_mono_regular</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.RigStatHead" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:letterSpacing">0.01</item>
        <item name="fontFamily">@font/roboto_mono_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorRigStatHead</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/font_size_inputs</item>
    </style>
    
    <style name="TextAppearance.RigTitle" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/roboto_mono_regular</item>
        <item name="android:textSize">@dimen/font_size_24</item>
    </style>
    
    <style name="TextAppearance.HeadLine6" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto_mono_regular</item>
    </style>
    
    <style name="RigChipTextStyle">
        <item name="android:textSize">@dimen/font_size_paragraph_text</item>
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="fontFamily">@font/roboto_mono_bold</item>
    </style>
    
    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_bottom_sheet_dialog_rounded_top</item>
    </style>
    
    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
    </style>

</resources>