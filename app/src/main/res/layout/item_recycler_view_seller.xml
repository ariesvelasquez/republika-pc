<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutMainView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/view_padding"
    android:layout_margin="@dimen/view_half_padding"
    android:background="@drawable/shape_rectangle_rounded_white_bordered_2dp"
    android:orientation="horizontal">
    
        
        <ImageView
            android:id="@+id/imageViewTipidPCIcon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_cube_outline"/>
    
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            style="@style/TextAppearance.RigTitle"
            android:textSize="@dimen/font_size_caption_small"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/view_half_padding"
            android:layout_marginStart="@dimen/view_half_padding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:ellipsize="end"
            tools:text="RAVTECHNO_PCHUB" />
    
</LinearLayout>