<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ariesvelasquez.com.republikapc"
    tools:ignore="GoogleAppIndexingWarning">
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application
        android:name=".RepublikaPC"
        android:allowBackup="false"
        android:label="@string/flavored_app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round">
        
        <activity android:name=".ui.webview.WebViewActivity"/>
        <activity android:name=".ui.rigs.RigItemsActivity" />
        <activity android:name=".ui.auth.AuthActivity" />
        <activity android:name=".ui.search.SearchActivity" />
        <activity android:name=".ui.selleritems.SellerItemsActivity" />
        <activity android:name=".ui.dashboard.DashboardActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
    
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>